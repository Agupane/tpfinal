<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="NOMBRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreEstacionamiento" />

        <TextView
            android:text="DIRECCION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDireccionEstacionamiento" />

        <TextView
            android:text="HORARIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHorarioEstacionamiento" />

        <TextView
            android:text="TARIFAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTarifa" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Ver en el mapa"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonVerEnMapa" />

            <Button
                android:text="Reservar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonReservar"
                android:layout_weight="0.70" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>